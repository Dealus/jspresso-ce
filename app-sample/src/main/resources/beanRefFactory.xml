<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="swing-context"
		class="org.springframework.context.support.ClassPathXmlApplicationContext">
		<constructor-arg>
			<list>
				<value>com/d2s/framework/application/commons.xml</value>
        <value>com/d2s/framework/application/backend/persistence/hibernate/commons-hibernate.xml</value>
        <value>com/d2s/framework/application/frontend/commons-view.xml</value>
        <value>com/d2s/framework/application/frontend/commons-swing.xml</value>
        <value>com/d2s/framework/sample/backend/domain/sample-model.xml</value>
        <value>com/d2s/framework/sample/view/sample-view.xml</value>
			</list>
		</constructor-arg>
	</bean>
	<bean id="ulc-context"
		class="org.springframework.context.support.ClassPathXmlApplicationContext"
		lazy-init="true">
		<constructor-arg>
			<list>
				<value>com/d2s/framework/test/model/domain/model.xml</value>
			</list>
		</constructor-arg>
		<constructor-arg>
			<ref local="com.d2s.framework.test" />
		</constructor-arg>
	</bean>
</beans>

