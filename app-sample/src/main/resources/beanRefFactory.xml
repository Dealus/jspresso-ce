<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  <bean id="sample-model-context"
    class="org.springframework.context.support.ClassPathXmlApplicationContext" lazy-init="true">
    <constructor-arg>
      <list>
        <value>com/d2s/framework/application/commons.xml</value>
        <value>com/d2s/framework/sample/model/sample-model.xml</value>
      </list>
    </constructor-arg>
  </bean>
	<bean id="sample-swing-context"
		class="org.springframework.context.support.ClassPathXmlApplicationContext" lazy-init="true">
		<constructor-arg>
			<list>
				<value>com/d2s/framework/application/commons.xml</value>
        <value>com/d2s/framework/application/backend/persistence/hibernate/commons-hibernate.xml</value>
        <value>com/d2s/framework/application/frontend/commons-frontend.xml</value>
        <value>com/d2s/framework/application/frontend/swing/commons-swing.xml</value>
        <value>com/d2s/framework/sample/model/sample-model.xml</value>
        <value>com/d2s/framework/sample/backend/sample-backend.xml</value>
        <value>com/d2s/framework/sample/frontend/sample-frontend.xml</value>
        <value>config.xml</value>
			</list>
		</constructor-arg>
	</bean>
	<bean id="sample-ulc-context"
		class="org.springframework.context.support.ClassPathXmlApplicationContext" lazy-init="true">
		<constructor-arg>
			<list>
				<value>com/d2s/framework/application/commons.xml</value>
        <value>com/d2s/framework/application/backend/persistence/hibernate/commons-hibernate.xml</value>
        <value>com/d2s/framework/application/frontend/commons-frontend.xml</value>
        <value>com/d2s/framework/application/frontend/ulc/commons-ulc.xml</value>
        <value>com/d2s/framework/sample/model/sample-model.xml</value>
        <value>com/d2s/framework/sample/backend/sample-backend.xml</value>
        <value>com/d2s/framework/sample/frontend/sample-frontend.xml</value>
        <value>config.xml</value>
			</list>
		</constructor-arg>
	</bean>
</beans>

