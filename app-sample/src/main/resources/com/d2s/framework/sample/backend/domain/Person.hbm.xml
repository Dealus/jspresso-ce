<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.d2s.framework.sample.backend.domain" default-access="com.d2s.framework.model.persistence.hibernate.property.EntityPropertyAccessor">
  <class dynamic-update="true" table="PERSON" persister="com.d2s.framework.model.persistence.hibernate.entity.persister.EntityProxyJoinedSubclassEntityPersister" name="com.d2s.framework.sample.backend.domain.Person" dynamic-insert="true">
    <id type="string" column="ID" length="36" name="id">
      <generator class="assigned"/>
    </id>
    <version column="VERSION" unsaved-value="null" name="version"/>
    <property name="birthDate" type="date">
      <column name="BIRTH_DATE"/>
    </property>
    <many-to-one cascade="lock" name="birthCity">
      <column name="BIRTH_CITY_ID"/>
    </many-to-one>
    <many-to-one cascade="lock" name="addressCity">
      <column name="ADDRESS_CITY_ID"/>
    </many-to-one>
    <many-to-one cascade="persist,merge,save-update,lock,refresh,evict,replicate" name="marriedTo">
      <column name="MARRIED_TO_ID" unique="true"/>
    </many-to-one>
    <property name="gender">
      <column name="GENDER" not-null="true"/>
    </property>
    <property name="vegetarian">
      <column name="VEGETARIAN"/>
    </property>
    <property name="name">
      <column name="NAME" not-null="true" length="15"/>
    </property>
    <property name="createTimestamp" type="timestamp">
      <column name="CREATE_TIMESTAMP"/>
    </property>
    <property name="lastUpdateTimestamp" type="timestamp">
      <column name="LAST_UPDATE_TIMESTAMP"/>
    </property>
    <joined-subclass name="com.d2s.framework.sample.backend.domain.Employee" dynamic-insert="true" persister="com.d2s.framework.model.persistence.hibernate.entity.persister.EntityProxyJoinedSubclassEntityPersister" table="EMPLOYEE" dynamic-update="true">
      <key column="ID"/>
      <property name="hireDate" type="date">
        <column name="HIRE_DATE"/>
      </property>
      <property name="annualSalary">
        <column name="ANNUAL_SALARY" scale="7"/>
      </property>
      <many-to-one cascade="save-update,lock" name="manager">
        <column name="MANAGER_ID"/>
      </many-to-one>
      <set inverse="true" cascade="persist,merge,save-update,lock,refresh,evict,replicate" name="managedEmployees">
        <key column="MANAGER_ID"/>
        <one-to-many class="com.d2s.framework.sample.backend.domain.Employee"/>
      </set>
      <many-to-one cascade="save-update,lock" name="department">
        <column name="DEPARTMENT_ID"/>
      </many-to-one>
      <set table="PROJECT_PROJECT_MEMBERS" inverse="true" cascade="none" name="employeeProjects">
        <key column="EMPLOYEE_ID"/>
        <many-to-many column="PROJECT_ID" class="com.d2s.framework.sample.backend.domain.Project"/>
      </set>
    </joined-subclass>
  </class>
</hibernate-mapping>
