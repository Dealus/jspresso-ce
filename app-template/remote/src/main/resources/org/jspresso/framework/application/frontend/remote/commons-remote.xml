<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
  default-lazy-init="true">

  <!--
    Remote root application context for the Jspresso framework.
  -->

  <!--
    The implementation used as ConnectorFactory.
  -->
  <bean
    id="connectorFactory"
    class="org.jspresso.framework.binding.remote.RemoteConnectorFactory"
    scope="prototype">
    <property
      name="guidGenerator"
      ref="guidGenerator" />
  </bean>

  <!--
    Remote peer registry
  -->
  <bean
    id="remotePeerRegistry"
    class="org.jspresso.framework.util.remote.registry.BasicRemotePeerRegistry"
    scope="prototype" />

  <!--
    Action beans
  -->
  <bean id="chartAction" abstract="true" parent="abstractChartAction"
    class="org.jspresso.framework.application.charting.frontend.action.server.DisplayChartAction" />

  <!--
    The implementation used as view factory.
  -->
  <bean
    id="iconFactory"
    parent="abstractIconFactory"
    class="org.jspresso.framework.view.remote.RemoteIconFactory"
    scope="prototype">
    <property
      name="guidGenerator"
      ref="guidGenerator" />
  </bean>

  <bean
    id="actionFactory"
    parent="abstractActionFactory"
    class="org.jspresso.framework.view.remote.RemoteActionFactory"
    scope="prototype">
    <property
      name="guidGenerator"
      ref="guidGenerator" />
  </bean>

  <bean
    id="openFileAction"
    parent="abstractOpenFileAction"
    class="org.jspresso.framework.application.frontend.action.remote.file.OpenFileAction" />

  <bean
    id="openFileAsBinaryPropertyAction"
    parent="abstractOpenFileAction"
    class="org.jspresso.framework.application.frontend.action.remote.file.OpenFileAsBinaryPropertyAction" />

  <bean
    id="saveFileAction"
    parent="abstractSaveFileAction"
    class="org.jspresso.framework.application.frontend.action.remote.file.SaveFileAction" />

  <bean
    id="saveBinaryPropertyAsFileAction"
    parent="saveFileAction"
    class="org.jspresso.framework.application.frontend.action.remote.file.SaveBinaryPropertyAsFileAction" />

  <bean
    id="displayReportAction"
    class="org.jspresso.framework.application.printing.frontend.action.remote.DisplayJasperReportAction" />

  <bean
    id="viewFactory"
    class="org.jspresso.framework.view.remote.DefaultRemoteViewFactory"
    parent="abstractViewFactory"
    scope="prototype">
    <property
      name="guidGenerator"
      ref="guidGenerator" />
  </bean>

  <!--
    The controllers.
  -->
  <bean
    id="frontController"
    abstract="true"
    parent="abstractFrontController"
    class="org.jspresso.framework.application.frontend.controller.remote.DefaultRemoteController">
    <property
      name="remotePeerRegistry"
      ref="remotePeerRegistry" />
    <property
      name="guidGenerator"
      ref="guidGenerator" />
  </bean>

</beans>

