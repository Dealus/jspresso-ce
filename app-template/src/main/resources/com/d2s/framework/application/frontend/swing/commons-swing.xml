<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
  default-lazy-init="true">

  <!--
    Swing root application context for the D2S framework.
  -->

  <!--
    The implementation used as ListSelectionModelBinder.
  -->
  <bean
    id="listSelectionModelBinder"
    class="org.jspresso.framework.binding.swing.DefaultListSelectionModelBinder" />

  <!--
    The implementation used as TreeSelectionModelBinder.
  -->
  <bean
    id="treeSelectionModelBinder"
    class="org.jspresso.framework.binding.swing.DefaultTreeSelectionModelBinder" />

  <!--
    Root action beans.
  -->
  <bean
    id="lovFindFrontAction"
    parent="abstractLovFindFrontAction"
    class="org.jspresso.framework.application.frontend.action.std.FindAction"
    scope="prototype" />

  <bean
    id="lovOkFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.lov.OkLovAction"
    scope="prototype">
    <property
      name="nextAction"
      ref="sourceViewConnectorSetAction" />
  </bean>

  <bean
    id="printOkFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.lov.OkChooseComponentAction">
    <property
      name="nextAction"
      ref="editReportParametersAction" />
  </bean>

  <bean
    id="doPrintAction"
    parent="abstractDoPrintAction"
    class="org.jspresso.framework.application.frontend.action.swing.std.OkAction" />

  <bean
    id="chooseActionOkFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.lov.OkChooseComponentAction">
    <property name="nextAction">
      <bean
        class="org.jspresso.framework.application.frontend.action.std.ExecuteActionAction" />
    </property>
  </bean>

  <bean
    id="cancelDialogFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.std.CancelAction" />

  <bean
    id="okDialogFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.std.OkAction" />

  <!--
    Action beans
  -->
  <bean
    id="removeEntityCollectionFromMasterFrontAction"
    parent="abstractRemoveCollectionFromMasterFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.flow.StaticYesNoAction" />

  <bean
    id="removeAnyCollectionFromMasterFrontAction"
    parent="abstractRemoveAnyCollectionFromMasterFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.flow.StaticYesNoAction" />

  <bean
    id="infoFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.flow.InfoAction">
    <property
      name="iconImageURL"
      value="classpath:com/d2s/framework/application/images/info-48x48.png" />
  </bean>

  <bean
    id="staticInfoFrontAction"
    abstract="true"
    parent="infoFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.flow.StaticInfoAction">
  </bean>

  <bean
    id="yesNoFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.flow.YesNoAction" />

  <bean
    id="staticYesNoFrontAction"
    abstract="true"
    parent="yesNoFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.flow.StaticYesNoAction" />

  <!--
    The implementation used as view factory.
  -->
  <bean
    id="iconFactory"
    parent="abstractIconFactory"
    class="org.jspresso.framework.view.swing.SwingIconFactory"
    scope="prototype" />

  <bean
    id="actionFactory"
    parent="abstractActionFactory"
    class="org.jspresso.framework.view.swing.SwingActionFactory"
    scope="prototype" />

  <bean
    id="abstractModalDialogAction"
    abstract="true"
    class="org.jspresso.framework.application.frontend.action.swing.std.ModalDialogAction" />

  <bean
    id="lovAction"
    parent="abstractLovAction"
    class="org.jspresso.framework.application.frontend.action.swing.lov.LovAction"
    scope="prototype" />

  <bean
    id="openFileAction"
    parent="abstractOpenFileAction"
    class="org.jspresso.framework.application.frontend.action.swing.file.OpenFileAction" />

  <bean
    id="openFileAsBinaryPropertyAction"
    parent="abstractOpenFileAction"
    class="org.jspresso.framework.application.frontend.action.swing.file.OpenFileAsBinaryPropertyAction" />

  <bean
    id="saveFileAction"
    parent="abstractSaveFileAction"
    class="org.jspresso.framework.application.frontend.action.swing.file.SaveFileAction" />

  <bean
    id="saveBinaryPropertyAsFileAction"
    parent="saveFileAction"
    class="org.jspresso.framework.application.frontend.action.swing.file.SaveBinaryPropertyAsFileAction" />

  <bean
    id="binaryPropertyInfoAction"
    parent="abstractBinaryPropertyInfoAction"
    class="org.jspresso.framework.application.frontend.action.swing.file.BinaryPropertyInfoAction" />

  <bean
    id="chooseComponentAction"
    parent="abstractChooseComponentAction"
    class="org.jspresso.framework.application.frontend.action.swing.lov.ChooseComponentAction" />

  <bean
    id="editReportParametersAction"
    parent="abstractEditReportParametersAction"
    class="org.jspresso.framework.application.printing.frontend.action.swing.EditReportParametersAction" />

  <bean
    id="displayReportAction"
    class="org.jspresso.framework.application.printing.frontend.action.swing.DisplayJasperReportAction" />

  <bean
    id="editComponentAction"
    parent="abstractEditComponentAction"
    class="org.jspresso.framework.application.frontend.action.swing.std.EditComponentAction" />

  <bean
    id="changePasswordAction"
    parent="abstractChangePasswordAction"
    class="org.jspresso.framework.application.frontend.action.swing.security.ChangePasswordAction" />

  <bean
    id="displayUrlFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.std.DisplayUrlAction" />

  <bean
    id="staticDisplayUrlFrontAction"
    abstract="true"
    parent="displayUrlFrontAction"
    class="org.jspresso.framework.application.frontend.action.swing.std.DisplayStaticUrlAction" />

  <bean
    id="wizardAction"
    parent="abstractWizardAction"
    class="org.jspresso.framework.application.frontend.action.swing.wizard.WizardAction" />

  <bean
    id="viewFactory"
    class="org.jspresso.framework.view.swing.DefaultSwingViewFactory"
    parent="abstractViewFactory"
    scope="prototype">
    <!--
      <constructor-arg index="0" value="com.jgoodies.looks.windows.WindowsLookAndFeel" />
      <constructor-arg index="0"
      value="com.jgoodies.looks.windows.WindowsLookAndFeel" />
      <constructor-arg index="0"
      value="com.jgoodies.looks.plastic.PlasticLookAndFeel" />
      <constructor-arg index="0"
      value="com.jgoodies.looks.plastic.Plastic3DLookAndFeel" />
      <constructor-arg index="0"
      value="com.jgoodies.looks.plastic.PlasticXPLookAndFeel" />
    -->
  </bean>

  <!--
    <bean id="jgoodiesViewFactory" class="org.jspresso.framework.view.swing.jgoodies.JGoodiesSwingViewFactory"
    parent="viewFactory" scope="prototype" />
  -->

  <!--
    The controllers.
  -->
  <bean
    id="frontController"
    abstract="true"
    parent="abstractFrontController"
    class="org.jspresso.framework.application.frontend.controller.swing.DefaultSwingController">
    <property
      name="viewFactory"
      ref="viewFactory" />
  </bean>
</beans>

