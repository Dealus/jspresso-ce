<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  Swing root application context for the D2S framework.
-->
<beans default-lazy-init="true">

  <!--
    The implementation used as ListSelectionModelBinder.
  -->
  <bean id="listSelectionModelBinder" class="com.d2s.framework.binding.swing.DefaultListSelectionModelBinder" />

  <!--
    The implementation used as TreeSelectionModelBinder.
  -->
  <bean id="treeSelectionModelBinder" class="com.d2s.framework.binding.swing.DefaultTreeSelectionModelBinder" />

  <!--
    Root action beans.
  -->
  <bean id="lovFindFrontAction" parent="abstractLovFindFrontAction"
    class="com.d2s.framework.application.frontend.action.std.FindAction" singleton="false" />

  <bean id="lovOkFrontAction" class="com.d2s.framework.application.frontend.action.swing.lov.OkLovAction"
    singleton="false">
    <property name="nextAction" ref="sourceViewConnectorSetAction" />
  </bean>

  <bean id="printOkFrontAction"
    class="com.d2s.framework.application.frontend.action.swing.lov.OkChooseComponentAction">
    <property name="nextAction" ref="editReportParametersAction" />
  </bean>

  <bean id="doPrintAction" parent="abstractDoPrintAction"
    class="com.d2s.framework.application.frontend.action.swing.std.OkAction" />

  <bean id="chooseActionOkFrontAction"
    class="com.d2s.framework.application.frontend.action.swing.lov.OkChooseComponentAction">
    <property name="nextAction">
      <bean class="com.d2s.framework.application.frontend.action.std.ExecuteActionAction" />
    </property>
  </bean>

  <bean id="cancelDialogFrontAction" class="com.d2s.framework.application.frontend.action.swing.std.CancelAction" />

  <bean id="okDialogFrontAction" class="com.d2s.framework.application.frontend.action.swing.std.OkAction" />

  <!-- 
    Action beans
  -->
  <bean id="removeCollectionFromMasterFrontAction" parent="abstractRemoveCollectionFromMasterFrontAction"
    class="com.d2s.framework.application.frontend.action.swing.flow.YesNoAction" />

  <bean id="infoFrontAction" abstract="true"
    class="com.d2s.framework.application.frontend.action.swing.flow.InfoAction" />

  <!--
    The implementation used as view factory.
  -->
  <bean id="iconFactory" parent="abstractIconFactory" class="com.d2s.framework.view.swing.SwingIconFactory"
    singleton="false" />

  <bean id="actionFactory" parent="abstractActionFactory" class="com.d2s.framework.view.swing.SwingActionFactory"
    singleton="false" />

  <bean id="abstractModalDialogAction" abstract="true"
    class="com.d2s.framework.application.frontend.action.swing.flow.ModalDialogAction" />

  <bean id="lovAction" parent="abstractLovAction"
    class="com.d2s.framework.application.frontend.action.swing.lov.LovAction" singleton="false" />

  <bean id="openFileAction" parent="abstractOpenFileAction"
    class="com.d2s.framework.application.frontend.action.swing.file.OpenFileAction" />

  <bean id="openFileAsBinaryPropertyAction" parent="abstractOpenFileAction"
    class="com.d2s.framework.application.frontend.action.swing.file.OpenFileAsBinaryPropertyAction" />

  <bean id="saveBinaryPropertyAsFileAction" parent="abstractSaveFileAction"
    class="com.d2s.framework.application.frontend.action.swing.file.SaveBinaryPropertyAsFileAction" />

  <bean id="binaryPropertyInfoAction" parent="abstractBinaryPropertyInfoAction"
    class="com.d2s.framework.application.frontend.action.swing.file.BinaryPropertyInfoAction" />

  <bean id="chooseComponentAction" parent="abstractChooseComponentAction"
    class="com.d2s.framework.application.frontend.action.swing.lov.ChooseComponentAction" />

  <bean id="editReportParametersAction" parent="abstractEditReportParametersAction"
    class="com.d2s.framework.application.printing.frontend.action.swing.EditReportParametersAction" />

  <bean id="displayReportAction"
    class="com.d2s.framework.application.printing.frontend.action.swing.DisplayJasperReportAction" />

  <bean id="editComponentAction" parent="abstractEditComponentAction"
    class="com.d2s.framework.application.frontend.action.swing.std.EditComponentAction" />

  <bean id="viewFactory" class="com.d2s.framework.view.swing.DefaultSwingViewFactory" parent="abstractViewFactory"
    singleton="false">
    <!--
      <constructor-arg index="0" value="com.jgoodies.looks.windows.WindowsLookAndFeel" />
      <constructor-arg index="0"
      value="com.jgoodies.looks.windows.WindowsLookAndFeel" />
      <constructor-arg index="0"
      value="com.jgoodies.looks.plastic.PlasticLookAndFeel" />
      <constructor-arg index="0"
      value="com.jgoodies.looks.plastic.Plastic3DLookAndFeel" />
      <constructor-arg index="0"
      value="com.jgoodies.looks.plastic.PlasticXPLookAndFeel" />
    -->
  </bean>

  <bean id="jgoodiesViewFactory" class="com.d2s.framework.view.swing.jgoodies.JGoodiesSwingViewFactory"
    parent="viewFactory" singleton="false" />

  <!--
    The controllers.
  -->
  <bean id="frontController" abstract="true" parent="abstractFrontController"
    class="com.d2s.framework.application.frontend.controller.swing.DefaultSwingController">
    <property name="viewFactory" ref="jgoodiesViewFactory" />
  </bean>
</beans>

