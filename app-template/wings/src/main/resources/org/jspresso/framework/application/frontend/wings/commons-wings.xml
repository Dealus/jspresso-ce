<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
  default-lazy-init="true">

  <!-- WingS root application context for the Jspresso framework. -->

  <!-- The implementation used as ConnectorFactory. -->
  <bean id="connectorFactory" class="org.jspresso.framework.binding.basic.BasicConnectorFactory" />

  <!-- The implementation used as ListSelectionModelBinder. -->
  <bean id="listSelectionModelBinder" class="org.jspresso.framework.binding.wings.DefaultListSelectionModelBinder" />

  <!-- The implementation used as TreeSelectionModelBinder. -->
  <bean id="treeSelectionModelBinder" class="org.jspresso.framework.binding.wings.DefaultTreeSelectionModelBinder" />

  <!-- Action beans -->
  <bean id="chartAction" abstract="true" parent="abstractChartAction"
    class="org.jspresso.framework.application.charting.frontend.action.server.DisplayChartAction" />

  <!-- The implementation used as view factory. -->

  <!-- This icon factory is defined as non-singleton since it implements a per wings session cache. -->
  <bean id="iconFactory" parent="iconFactoryBase" class="org.jspresso.framework.view.wings.WingsIconFactory" scope="prototype" />

  <bean id="actionFactory" parent="actionFactoryBase" class="org.jspresso.framework.view.wings.WingsActionFactory"
    scope="prototype" />

  <bean id="openFileAction" parent="abstractOpenFileAction" class="org.jspresso.framework.application.frontend.action.wings.file.OpenFileAction" />

  <bean id="openFileAsBinaryPropertyAction" parent="abstractOpenFileAction"
    class="org.jspresso.framework.application.frontend.action.wings.file.OpenFileAsBinaryPropertyAction" />

  <bean id="saveFileAction" parent="abstractSaveFileAction" class="org.jspresso.framework.application.frontend.action.wings.file.SaveFileAction" />

  <bean id="saveBinaryPropertyAsFileAction" parent="saveFileAction"
    class="org.jspresso.framework.application.frontend.action.wings.file.SaveBinaryPropertyAsFileAction" />

  <bean id="displayReportAction" class="org.jspresso.framework.application.printing.frontend.action.wings.DisplayJasperReportAction" />

  <bean id="wingsViewFactory" abstract="true" parent="viewFactoryBase" class="org.jspresso.framework.view.wings.DefaultWingsViewFactory" />

  <bean id="viewFactory" parent="wingsViewFactory" scope="prototype">
    <property name="maxCharacterLength" value="48" />
    <property name="listSelectionModelBinder" ref="listSelectionModelBinder" />
    <property name="treeSelectionModelBinder" ref="treeSelectionModelBinder" />
  </bean>

  <!-- The controllers. -->
  <bean id="wingsFrontController" abstract="true" parent="abstractFrontController"
    class="org.jspresso.framework.application.frontend.controller.wings.DefaultWingsController" />

  <bean id="frontController" abstract="true" parent="wingsFrontController" scope="prototype" />

</beans>

