#set( $symbol_dollar = '$' )
<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>${groupId}</groupId>
    <artifactId>${rootArtifactId}</artifactId>
    <version>${version}</version>
    <relativePath>../../../pom.xml</relativePath>
  </parent>
  <artifactId>${artifactId}</artifactId>
  <packaging>swf</packaging>
  <name>${applicationName} - Startup - Flex - Client</name>

  <dependencies>
    <dependency>
      <groupId>com.adobe.flex.framework</groupId>
      <artifactId>flex-framework</artifactId>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.jspresso.framework</groupId>
      <artifactId>jspresso-flex</artifactId>
      <type>swc</type>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>${symbol_dollar}{basedir}/src/main/flex</sourceDirectory>
    <testSourceDirectory>${symbol_dollar}{basedir}/src/test/flex</testSourceDirectory>
    <resources>
      <resource>
        <directory>${symbol_dollar}{basedir}/src/main/resources</directory>
      </resource>
      <resource>
        <directory>${symbol_dollar}{project.build.directory}/generated-resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.sonatype.flexmojos</groupId>
        <artifactId>flexmojos-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>default-compile-swf</id>
            <phase>package</phase>
            <goals>
              <goal>compile-swf</goal>
            </goals>
          </execution>
          <execution>
            <id>generate-asdoc</id>
            <phase>package</phase>
            <goals>
              <goal>asdoc</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <locales>
            <locale>en_US</locale>
            <locale>fr_FR</locale>
            <locale>es_ES</locale>
            <locale>pt_BR</locale>
          </locales>
          <mergeResourceBundle>true</mergeResourceBundle>
          <parameters>
            <swf>${symbol_dollar}{project.artifactId}</swf>
          </parameters>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>