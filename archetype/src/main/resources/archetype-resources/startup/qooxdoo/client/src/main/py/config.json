#set( $symbol_dollar = '$' )
{
  "name"    : "${applicationName}",

  "include" :
  [
    {
      "path" : "${symbol_dollar}{QOOXDOO_PATH}/tool/data/config/application.json"
    }
    ,
    {
      "path" : "${symbol_dollar}{TARGET}/jspresso-qooxdoo-client-zip/py/library.json",
      "as"   : "jspresso-qooxdoo"
    }
  ],

  "export" :
  [
    "api",
    "build",
    "clean",
    "distclean",
    "fix",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation"
  ],

  "let" :
  {
    "TARGET"       : "../../../target",
    "APPLICATION"  : "${package}.startup.qooxdoo",
    "QOOXDOO_PATH" : "../../../target/qooxdoo-sdk",
    "QXTHEME"      : "${package}.startup.qooxdoo.theme.Theme",
    "QXICONTHEME"  : ["Oxygen"],
    "API_EXCLUDE"  : ["qx.legacy.*","qx.test.*"],
    "LOCALES"      : ["en","fr","es","pt"],
    "ROOT"         : "..",
    "BUILD_PATH"   : "${symbol_dollar}{TARGET}/web"
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

  "jobs" :
  {
    "common" : 
    {
      "cache" :
      {
        "compile"     : "${symbol_dollar}{TARGET}/cache",
        "downloads"   : "${symbol_dollar}{TARGET}/cache/downloads"
      }
    },
    "libraries" : 
    {
      "extend" : ["jspresso-qooxdoo::libraries"],
      
      "library" :
      [
        {
          "manifest" : "${symbol_dollar}{TARGET}/jspresso-qooxdoo-client-zip/Manifest.json"
        }
      ]
    },
    "build-files" :
    {
      "copy-files" :
      {
        "source" : "${symbol_dollar}{ROOT}/html"
      }
    },
    "source-script" :
    {
      "compile-options" :
      {
        "uris" : 
        {
          "add-nocache-param" : false
        }
      }
    },
    "source-all-script" :
    {
      "compile-options" :
      {
        "uris" : 
        {
          "add-nocache-param" : false
        }
      }
    }
  }
}
