<?xml version="1.0"?>

<project
  name="jspresso-framework-as3">

  <path
    id="project.classpath">
    <dirset
      dir="${basedir}">
      <include
        name="**/target/classes" />
    </dirset>
  </path>

  <target
    name="generate.as3">
    <gas3
      outputdir="flex/src/main/flex"
      interfacetemplate="class:org/granite/generator/template/jspressoInterface.gsp"
      beantemplate="class:org/granite/generator/template/jspressoBean.gsp">
      <classpath
        refid="project.classpath" />
      <fileset
        dir="util/target/classes">
        <include
          name="**/CellConstraints.class" />
      </fileset>
      <fileset
        dir="remote/components/target/classes">
        <exclude
          name="**/*Factory.class" />
        <exclude
          name="**/*Registry.class" />
        <include
          name="**/*.class" />
      </fileset>
      <fileset
        dir="remote/application/target/classes">
        <include
          name="**/*State.class" />
        <include
          name="**/*Command.class" />
      </fileset>
    </gas3>
    <delete>
      <fileset
        dir="flex/src/main/flex">
        <include
          name="**/*Base.as" />
      </fileset>
    </delete>
  </target>
</project>