<?xml version="1.0"?>

<project name="jspresso-framework-as3">

  <path id="project.classpath">
    <dirset dir="${basedir}">
      <include name="**/target/classes" />
    </dirset>
  </path>

  <target name="clean">
    <delete>
      <fileset dir="src/main/as3" includes="**/*.as" />
    </delete>
  </target>

  <target name="generate.as3" depends="clean">
    <gas3 outputdir="src/main/as3">
      <classpath refid="project.classpath" />
      <fileset dir="util/target/classes">
        <include name="org/jspresso/framework/util/IIconImageURLProvider.class" />
        <include name="org/jspresso/framework/util/descriptor/*.class" />
      </fileset>
      <fileset dir="model/target/classes">
        <include name="org/jspresso/framework/model/descriptor/**/*Descriptor.class" />
        <include name="org/jspresso/framework/model/descriptor/EDateType.class" />
      </fileset>
      <fileset dir="view/target/classes">
        <include name="org/jspresso/framework/view/action/*.class" />
        <include name="org/jspresso/framework/view/descriptor/**/*Descriptor.class" />
        <include name="org/jspresso/framework/view/descriptor/EAxis.class" />
        <include name="org/jspresso/framework/view/descriptor/EBorderType.class" />
        <include name="org/jspresso/framework/view/descriptor/ELabelPosition.class" />
        <include name="org/jspresso/framework/view/descriptor/EOrientation.class" />
      </fileset>
    </gas3>
  </target>
</project>