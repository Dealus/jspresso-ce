<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jspresso</groupId>
  <artifactId>jspresso-framework</artifactId>
  <packaging>pom</packaging>
  <version>2.3-SNAPSHOT</version>
  <name>Jspresso Application Framework</name>
  <description>Jspresso is a new generation framework to easily build professional quality java distributed desktop applications. Jspresso dramatically reduces the development cycles needed to get your business application up and running while not sacrificing quality, robustness and performance. Jspresso is not another webapp framework. Jspresso based applications offer the exact same ergonomics as desktop applications while keeping an N-tier centralized architecture. And last but not least, Jspresso is free.</description>
  <url>http://www.jspresso.org</url>
  <organization>
    <name>Jspresso</name>
    <url>http://www.jspresso.org</url>
  </organization>
  <inceptionYear>2005</inceptionYear>
  <licenses>
    <license>
      <name>LGPL V3</name>
      <url>LICENSE.txt</url>
      <distribution>repo</distribution>
      <comments>A business-friendly OSS license</comments>
    </license>
  </licenses>
  <scm>
    <connection>scm:svn:https://svn.jspresso.org/jspresso/framework/trunk</connection>
  </scm>
  <!--
    <mailingLists> <mailingList> <name>${pom.name} Dev List</name> <subscribe>dev-subscribe@jspresso.org</subscribe>
    <unsubscribe>dev-unsubscribe@jspresso.org</unsubscribe> </mailingList> <mailingList> <name>${pom.name} User
    List</name> <subscribe>users-subscribe@jspresso.org</subscribe>
    <unsubscribe>users-unsubscribe@jspresso.org</unsubscribe> </mailingList> </mailingLists>
  -->
  <developers>
    <developer>
      <name>Vincent Vandenschrick</name>
      <id>vvandens</id>
      <email>vvandens@jspresso.org</email>
      <organization>Jspresso</organization>
    </developer>
  </developers>
  <pluginRepositories>
    <pluginRepository>
      <id>flex-mojos-repository</id>
      <url>http://svn.sonatype.org/flexmojos/repository</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
    <!--
      <pluginRepository> <id>snapshots</id> <url>http://people.apache.org/repo/m2-snapshot-repository</url>
      </pluginRepository> <pluginRepository> <id>codehaus</id> <url>http://snapshots.repository.codehaus.org</url>
      </pluginRepository>
    -->
  </pluginRepositories>
  <distributionManagement>
    <repository>
      <id>jspresso-repository</id>
      <url>scp://repository.jspresso.org/var/maven/repositories/maven2</url>
    </repository>
    <snapshotRepository>
      <id>jspresso-snapshots-repository</id>
      <url>scp://repository.jspresso.org/var/maven/repositories/maven2-snapshots</url>
      <uniqueVersion>false</uniqueVersion>
    </snapshotRepository>
    <site>
      <id>jspresso-maven-site</id>
      <url>scp://www.jspresso.org/var/www/jspresso/external/maven-site</url>
    </site>
  </distributionManagement>
  <repositories>
    <repository>
      <id>jboss</id>
      <url>http://repository.jboss.org/maven2</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>beandoc</id>
      <url>http://spring-beandoc.sourceforge.net/repo</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>sun</id>
      <url>http://download.java.net/maven/2</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>jspresso-repository</id>
      <url>http://repository.jspresso.org/maven2</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>jspresso-snapshots-repository</id>
      <url>http://repository.jspresso.org/maven2-snapshots</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>flex-mojos-repository</id>
      <url>http://svn.sonatype.org/flexmojos/repository</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>
  <modules>
    <module>root</module>
    <module>dependencies</module>
    <module>application</module>
    <module>binding</module>
    <module>action</module>
    <module>model</module>
    <module>tools</module>
    <module>util</module>
    <module>security</module>
    <module>view</module>
    <module>hibernate</module>
    <module>swing</module>
    <module>wings</module>
    <module>remote</module>
    <module>flex</module>
    <module>jasper</module>
    <module>app-launch</module>
    <module>app-template</module>
  </modules>
  <profiles>
    <profile>
      <id>ulc</id>
      <modules>
        <module>ulc</module>
      </modules>
    </profile>
  </profiles>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-assembly-plugin</artifactId>
          <version>2.2-beta-3</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>beandoc</id>
            <phase>pre-site</phase>
            <configuration>
              <tasks>
                <taskdef
                  name="beandoc"
                  classname="org.springframework.beandoc.client.AntTask" />
                <taskdef
                  resource="net/sf/antcontrib/antlib.xml" />
                <if>
                  <equals
                    arg1="${project.artifactId}"
                    arg2="jspresso-framework" />
                  <then>
                    <mkdir
                      dir="${project.reporting.outputDirectory}/beandocs" />
                    <mkdir
                      dir="${project.reporting.outputDirectory}/beandocs/tmp" />
                    <copy
                      todir="${project.reporting.outputDirectory}/beandocs/tmp"
                      flatten="true">
                      <fileset
                        dir="${basedir}/app-template/core/src/main/resources">
                        <include
                          name="**/commons.xml" />
                        <include
                          name="**/commons-hibernate.xml" />
                        <include
                          name="**/commons-frontend.xml" />
                      </fileset>
                      <fileset
                        dir="${basedir}/app-template/swing/src/main/resources">
                        <include
                          name="**/commons-swing.xml" />
                      </fileset>
                    </copy>
                    <beandoc
                      outputDir="${project.reporting.outputDirectory}/beandocs"
                      beandocProps="${basedir}/jspresso-beandoc.properties">
                      <fileset
                        dir="${project.reporting.outputDirectory}/beandocs/tmp">
                        <include
                          name="**/*.xml" />
                      </fileset>
                    </beandoc>
                    <delete
                      dir="${project.reporting.outputDirectory}/beandocs/tmp" />
                  </then>
                </if>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>ant-contrib</groupId>
            <artifactId>ant-contrib</artifactId>
            <version>1.0b2</version>
          </dependency>
          <dependency>
            <groupId>org.springframework.beandoc</groupId>
            <artifactId>spring-beandoc</artifactId>
            <version>0.8.1</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/dist-bin.xml</descriptor>
            <descriptor>src/main/assembly/dist-src.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <autoVersionSubmodules>true</autoVersionSubmodules>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <inherited>false</inherited>
        <executions>
          <execution>
            <goals>
              <goal>aggregate</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <attach>false</attach>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <aggregate>true</aggregate>
          <linksource>true</linksource>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
</project>