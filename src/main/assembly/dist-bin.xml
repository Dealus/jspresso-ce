<assembly>
  <id>dist-bin</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <componentDescriptors>
    <componentDescriptor>src/main/assembly/commons.xml</componentDescriptor>
  </componentDescriptors>
  <moduleSets>
    <moduleSet>
      <binaries>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <outputDirectory>lib</outputDirectory>
            <!--<outputFileNameMapping>${groupId}/${artifactId}-${version}.${extension}</outputFileNameMapping>-->
            <excludes>
              <exclude>com.design2see:*</exclude>
              <exclude>ulc:*</exclude>
              <exclude>javax.servlet:*</exclude>
              <exclude>javax.transaction:*</exclude>
              <exclude>dom4j:dom4j:*:1.4</exclude>
              <exclude>jaxen:jaxen:*:1.0-FCS</exclude>
              <exclude>relaxngDatatype:relaxngDatatype:*:20020414</exclude>
              <exclude>xml-apis:xml-apis:*:1.0.b2</exclude>
            </excludes>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>