<assembly>
  <id>dist-bin</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>doc/reference/target</directory>
      <outputDirectory>doc/reference</outputDirectory>
      <includes>
        <include>html/**</include>
        <include>pdf/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/site</directory>
      <outputDirectory>doc</outputDirectory>
      <includes>
        <include>apidocs/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>3rd-party-licences</directory>
      <outputDirectory>3rd-party-licences</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
  </fileSets>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>com.design2see:*</include>
      </includes>
      <binaries>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <outputDirectory>lib</outputDirectory>
            <!--<outputFileNameMapping>${groupId}/${artifactId}-${version}.${extension}</outputFileNameMapping>-->
            <excludes>
              <exclude>com.design2see:*</exclude>
              <exclude>ulc:*</exclude>
              <exclude>javax.servlet:*</exclude>
              <exclude>javax.transaction:*</exclude>
              <exclude>dom4j:dom4j:*:1.4</exclude>
              <exclude>jaxen:jaxen:*:1.0-FCS</exclude>
              <exclude>relaxngDatatype:relaxngDatatype:*:20020414</exclude>
              <exclude>xml-apis:xml-apis:*:1.0.b2</exclude>
            </excludes>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>