<assembly>
  <id>dist-src</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <componentDescriptors>
    <componentDescriptor>src/main/assembly/commons.xml</componentDescriptor>
  </componentDescriptors>
  <moduleSets>
    <moduleSet>
      <sources>
        <includeModuleDirectory>false</includeModuleDirectory>
        <fileSets>
          <fileSet>
            <directory>src/main/java</directory>
            <outputDirectory>src</outputDirectory>
          </fileSet>
          <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>src</outputDirectory>
          </fileSet>
        </fileSets>
      </sources>
      <binaries>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <outputDirectory>lib</outputDirectory>
            <!--<outputFileNameMapping>${groupId}/${artifactId}-${version}.${extension}</outputFileNameMapping>-->
            <excludes>
                <exclude>org.jspresso:*</exclude>
              <exclude>ulc:*</exclude>
              <exclude>javax.servlet:*</exclude>
              <!--<exclude>javax.transaction:*</exclude>-->
              <exclude>dom4j:dom4j:jar:1.4</exclude>
              <exclude>jaxen:jaxen:jar:1.0-FCS</exclude>
              <exclude>relaxngDatatype:relaxngDatatype:jar:20020414</exclude>
              <exclude>xml-apis:xml-apis:jar:1.0.b2</exclude>
          </excludes>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>